#include <stdio.h>
int main()
{
   int i,j,n,x;
   printf("enter n value: ");
   scanf("%d",&n);
   for(i=n;i>=1;i--)
   {
     x=n;
     for(j=n;j>=i;j--)
     {
         printf("%3d",x);
         x--;
     }
     printf("\n");
   }
    return 0;
}

  input:
  enter n value: 6
  output:
  6
  6  5
  6  5  4
  6  5  4  3
  6  5  4  3  2
  6  5  4  3  2  1
