#include <stdio.h>
int main() {
    char cha;
    printf("enter the character to change: ");
    scanf("%c",&cha);
    char str[50];
   scanf("%s",str);
   int i; 
   for(i=0;str[i]!='\0';i++)
{
          if(str[i]==cha) 
          str[i]=str[i]-32;     
   }
    printf("%s",str);

    return 0;
}
sample input1:
enter the character to change: a
aditya
sample output1:
AdityA
